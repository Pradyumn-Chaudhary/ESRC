int serialNum = 1;
char charToDisplay;

void setup() {
  // put your setup code here, to run once:
  for(int i = 0; i<num_led_segments; i++){
    pinMode(picoPinGPIO[i], OUTPUT);
  }
  Serial.begin(9600);

  while(!Serial);
}

void loop() {
  // put your main code here, to run repeatedly:
 
  Serial.print(serialNum);
  Serial.print(" What do you want to display? \r\n");
  Serial.print("Enter anything between 0-9 and A-Z \r\n");
 
  while(!Serial.available());

  charToDisplay = Serial.read();

  displayAlphabet(charToDisplay);
  delay(1000);
  serialNum++;
  while(Serial.available()){
    Serial.read();
  }

}


void displayAlphabet(char ch){
  int fontRowNum;
  if(ch >= '0' && ch <= '9'){
    fontRowNum = ch - '0';
  }
  else if(ch >= 'A' && ch <= 'Z'){
    fontRowNum = 10 + ch - 'A';
  }
  else if (ch == ' '){
    fontRowNum = 36;
  }
  else{
    fontRowNum = 37;
  }

  for(int i = 0; i<num_led_segments; i++){
    digitalWrite(picoPinGPIO[i], fontSymbol[fontRowNum][i]);
  }
}
